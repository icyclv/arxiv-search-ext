# ArXiv Fetcher Configuration

# Output mode: 'local' to save to a file, 'api' to send to a service.
ARXIV_OUTPUT_MODE=local

# Directory to save files when ARVIX_OUTPUT_MODE is 'local'.
OUTPUT_DIR=./output

# The number of hours in the past to fetch papers from.
FETCH_HOURS=24

# --- API Service Configuration (only needed if ARVIX_OUTPUT_MODE is 'api') ---

# The URL of the API service to send data to.
ARXIV_API_SERVICE_URL=

# Set to 'true' to enable API key authentication.
ARXIV_ENABLE_AUTH=false

# Your secret API key (required if ARVIX_ENABLE_AUTH is 'true').
ARXIV_API_KEY=
